<%= form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, class: 'required' %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :ingredients, class: 'required' %><br>
    <%= f.text_area :ingredients %>
  </div>
  <div class="field">
    <%= f.label :instructions, class: 'required' %><br>
    <%= f.text_area :instructions %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br />
    <%= f.select :category_id, @categories, :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :calories %><br>
    <%= f.number_field :calories %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
  
  <div class="field">
    <%= f.label ' *required fields' %><br>
  </div>
<% end %>
